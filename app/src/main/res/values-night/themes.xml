<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.V21.Night.Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_mode_grey</item>
        <item name="colorPrimaryVariant">@color/dark_mode_grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dodger_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="iconTint">@color/light_grey</item>
    </style>

    <style name="Base.Night.Theme.NewsApp" parent="Base.V21.Night.Theme.NewsApp"/>

    <style name="Theme.NewsApp" parent="Base.Night.Theme.NewsApp"/>

    <style name="Theme.NewsApp.ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/dark_mode_grey</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Theme.NewsApp.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/dark_mode_grey</item>
    </style>

    <style name="Theme.NewsApp.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.NewsApp.TextView.Title" parent="Theme.NewsApp.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Theme.NewsApp.CardView.TextView" parent="Theme.NewsApp.TextView">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Theme.NewsApp.CardView.TextView.Title" parent="Theme.NewsApp.CardView.TextView">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NewsApp.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/dark_mode_grey</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Theme.NewsApp.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/dark_mode_grey</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/dodger_blue</item>
        <item name="tabIndicatorColor">@color/dodger_blue</item>
    </style>

    <style name="Theme.NewsApp.SettingButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/dark_mode_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right_24</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>